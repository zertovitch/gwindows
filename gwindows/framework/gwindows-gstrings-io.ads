--  Simple IO for GStrings based on GNAT.IO

package GWindows.GStrings.IO is

   procedure Get (X : out Integer);
   procedure Put (X : Integer);

   procedure Get (C : out GCharacter);
   procedure Put (C : GCharacter);

   procedure Put (S : GString);
   procedure Put_Line (S : GString);

   procedure Put_Line_String (S : String);
   procedure Put_Line_Wide_String (S : Wide_String);

   procedure New_Line (Spacing : Positive := 1);
   function Get_Line return GString;

end GWindows.GStrings.IO;
